{
  "permissions": {
    "allow": [
      "WebSearch",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(tree:*)",
      "Bash(find:*)",
      "Bash(rg:*)",
      "Bash(cargo: *)",
      "Bash(curl:*)",
      "Bash(rustc:*)",
      "Bash(docker run:*)",
      "Bash(nix:*)",
      "Bash(go:*)",
      "Bash(python:*)",
      "Bash(npm:*)",
      "Bash(git status:*)",
      "Bash(git log:*)",
      "Bash(git diff:*)",
      "Bash(git fetch:*)"
    ],
    "deny": [
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git reset:*)"
    ]
  },
	"hooks": {
		"UserPromptSubmit": [
			{
				"hooks": [
					{
						"type": "command",
						"command": "echo 'INSTRUCTION: If the prompt matches any available skill keywords, use Skill(skill-name) to activate it.'"
					}
				]
			}
		]
	},
  "companyAnnouncements": [
      "Welcome!"
  ]
}
